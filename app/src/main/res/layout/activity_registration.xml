<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30px"
    android:background="@drawable/custom_background"
    android:layout_height="match_parent"
    tools:context=".Registration">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to GameLand"
        android:textColor="@color/lavender"
        android:textSize="35dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="25dp"
            android:backgroundTint="#EBDEF1"
            android:background="@drawable/custom_edittext">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/register"
        android:textSize="80px"
        android:layout_marginBottom="50px"
        android:textStyle="bold"
        android:textColor="@color/lavender"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/CustomOutlinedBox"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_address"
                app:endIconMode="clear_text"
                app:endIconTint="@color/lavender"
                app:startIconDrawable="@drawable/baseline_person_24"
                app:startIconTint="@color/lavender"
                android:textColorHint="@color/lavender">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:inputType="textEmailAddress"
                    android:padding="35px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15px"
                    android:textColor="@color/black">

                </com.google.android.material.textfield.TextInputEditText>


            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/CustomOutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/lavender"
                app:startIconDrawable="@drawable/baseline_lock_24"

                app:startIconTint="@color/lavender"
                android:textColorHint="@color/lavender">

                <com.google.android.material.textfield.TextInputEditText

                    android:id="@+id/password"
                    android:inputType="textPassword"
                    android:padding="35px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35px"
                    android:textColor="@color/black">


                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="278sp"
        android:layout_height="50dp"
        android:text="Register"
        android:backgroundTint="#9431F8 "
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="439dp" />

            <TextView
                android:id="@+id/loginNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:layout_gravity="center"
                android:text="@string/click_to_login"
                android:textColor="@color/lavender"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>